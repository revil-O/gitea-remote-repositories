{
  "// ========================================": "VS Code Offline Mode Configuration for Gitea Remote Repositories",
  "// Diese Einstellungen deaktivieren alle Marketplace-Zugriffe": true,
  
  "// Extensions Configuration": {
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnInstall": false,
    "extensions.showSuggestedExtensions": false
  },

  "// Updates & Telemetry": {
    "update.mode": "none",
    "update.enableWindowsBackgroundUpdates": false,
    "update.checkInterval": 0,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.telemetryLevel": "off"
  },

  "// Online Services": {
    "settingsSync.enabled": false,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false
  },

  "// Marketplace Endpoints Deaktivieren": {
    "extensions.marketplace.serviceUrl": "",
    "extensions.marketplace.cacheUrl": "",
    "extensions.marketplace.itemUrl": ""
  },

  "// Editor Settings": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
},
"makefile.configureOnOpen": false
}